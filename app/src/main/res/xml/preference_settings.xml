<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <com.dede.android_eggs.settings.NightModeSwitchPreference
        android:defaultValue="false"
        android:key="key_night_mode"
        android:summaryOff="@string/summary_theme_follow_system"
        android:summaryOn="@string/summary_theme_dark_mode"
        android:switchTextOff="\ue1ab"
        android:switchTextOn="\ue3a9"
        android:title="@string/pref_title_theme" />

    <ListPreference
        android:defaultValue=""
        android:entries="@array/icon_shape_override_paths_names"
        android:entryValues="@array/icon_shape_override_paths_values"
        android:key="pref_override_icon_shape"
        android:title="@string/icon_shape_override_label"
        app:useSimpleSummaryProvider="true" />

    <Preference
        android:enabled="false"
        android:key="pref_language"
        android:persistent="false"
        android:title="@string/pref_title_language" />

    <SwitchPreferenceCompat
        android:defaultValue="true"
        android:key="key_dynamic_color"
        android:title="Dynamic Color"
        app:summaryOff="@string/v7_preference_off"
        app:summaryOn="@string/v7_preference_on"
        app:widgetLayout="@layout/layout_widget_material_switch"
        tools:ignore="PrivateResource" />

    <com.dede.android_eggs.ui.VersionPreference />

</PreferenceScreen>


